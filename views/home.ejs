<%- include("partials/header") -%>

<div class="container-fluid">
    <h1>Home</h1>
    <p><%= homeContent %></p>

    <% posts.forEach(post => { %>
        <h1><%= post.title %></h1>
        <p class="post-content-preview"><%= post.content.substr(0, 100) %>...<span> <a class="read-more" href="/posts/<%= post._id %>">Read more</a></span></p>
        
    <% }); %>

</div>

